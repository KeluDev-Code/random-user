{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb",
    "next/core-web-vitals"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error"
    ],
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": [
      "error"
    ],
    "import/prefer-default-export": [
      "off"
    ],
    "import/extensions": [
      "error",
      "never",
      {
        "ignorePackages": true
      }
    ],
    "max-len": [
      "error",
      {
        "code": 130
      }
    ],
    "indent": "off",
    "@typescript-eslint/indent": [
      "error",
      2
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1,
        "maxEOF": 0
      }
    ],
    "react/jsx-props-no-multi-spaces": [
      "error"
    ],
    "react/jsx-child-element-spacing": [
      "error"
    ],
    "react/jsx-curly-spacing": [
      2,
      {
        "when": "never",
        "children": {
          "when": "never"
        }
      }
    ],
    "react/jsx-equals-spacing": [
      2,
      "never"
    ],
    "react/jsx-tag-spacing": [
      2,
      {
        "closingSlash": "never",
        "beforeSelfClosing": "always",
        "afterOpening": "never",
        "beforeClosing": "never"
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    ],
    "react/require-default-props": [
      "off"
    ]
  }
}
